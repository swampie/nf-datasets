{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/swampie/nf-datasets/master/nextflow_schema.json",
    "title": "Nextflow pipeline parameters",
    "description": "This pipeline uses Nextflow and processes some kind of data. The JSON Schema was built using the nf-core pipeline schema builder.",
    "type": "object",
    "properties": {
        "ip_address": {
            "type": "string"
        },
        "gender": {
            "type": "string",
            "description": "Gender",
            "default": "M"
        },
        "email": {
            "type": "string",
            "description": "Email"
        },
        "last_name": {
            "type": "string",
            "description": "Last Name"
        },
        "first_name": {
            "type": "string",
            "description": "first name"
        },
        "id": {
            "type": "number",
            "description": "the id"
        }
    },
    "required": [
        "gender",
        "last_name",
        "first_name",
        "id"
    ]
}